root = true

[*]
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
indent_size = 4
trim_trailing_whitespace = false

[*.py]
indent_size = 4

[*.yml]
indent_size = 2

[*.html]
indent_size = 2

[{*.js,*.ts}]
indent_size = 2

[runtime.txt]
insert_final_newline = false
